<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_about_top_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <ImageView
        android:id="@+id/iv_about_header_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_about"
        app:layout_constraintBottom_toTopOf="@+id/guideline_about_top_header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_about_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_white_cycle"
        android:elevation="2dp"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_logo_l"
        app:layout_constraintBottom_toBottomOf="@+id/iv_about_header_image"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_about_header_image"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/proxima_nowa_extra_condensed"
        android:text="@string/title_about"
        android:textColor="@color/general_black"
        android:textSize="34sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_about_logo" />

    <TextView
        android:id="@+id/tv_about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nowa_extra_condensed"
        android:textColor="@color/general_blue"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_about_title"
        app:layout_constraintRight_toRightOf="@+id/tv_about_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_about_title"
        tools:text="1.0" />

    <TextView
        android:id="@+id/tv_develop_title_about"
        style="@style/AppTheme.AboutSmallTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:text="@string/develop_title_about"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_about_version" />

    <TextView
        android:id="@+id/tv_developer_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="Яўген Сліж"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_develop_title_about" />

    <TextView
        android:id="@+id/tv_developer_mail_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:text="tyteishi@gmail.com"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_developer_about" />

    <TextView
        style="@style/AppTheme.AboutSmallTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/design_title_about"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_about_version" />

    <TextView
        android:id="@+id/tv_designer_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="@font/product_sans_regular"
        android:text="Ілля Кравец"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_develop_title_about" />

    <TextView
        android:id="@+id/tv_designer_first_link_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="t.me/kravets"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_designer_about" />

    <TextView
        android:id="@+id/tv_designer_second_link_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:text="behance.net/ikravets"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_designer_first_link_about" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/proxima_nowa_extra_condensed"
        android:gravity="center"
        tools:text="Туту будзе інфармацыя пра дадатак"
        android:textColor="@color/general_black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_designer_second_link_about" />
</androidx.constraintlayout.widget.ConstraintLayout>