<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.Guideline
        android:id="@+id/guideline_about_top_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintGuide_percent="0.4"
        android:orientation="horizontal"/>

    <ImageView
        android:id="@+id/iv_about_header_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_about"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline_about_top_header"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/iv_about_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bg_white_cycle"
        android:src="@drawable/ic_alphabet_logo"
        android:scaleType="centerInside"
        android:paddingLeft="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_about_header_image"
        app:layout_constraintBottom_toBottomOf="@+id/iv_about_header_image"
        android:elevation="2dp"
        android:paddingStart="15dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_about_title"
        app:layout_constraintTop_toBottomOf="@+id/iv_about_logo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/title_about"
        android:textSize="34sp"
        android:fontFamily="@font/proxima_nowa_extra_condensed"
        android:layout_marginTop="10dp"
        android:textColor="@color/general_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintLeft_toLeftOf="@+id/tv_about_title"
        app:layout_constraintRight_toRightOf="@+id/tv_about_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_about_title"
        android:textSize="12sp"
        android:fontFamily="@font/proxima_nowa_extra_condensed"
        android:textColor="@color/general_blue"
        android:id="@+id/tv_about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="1.0"/>
</android.support.constraint.ConstraintLayout>