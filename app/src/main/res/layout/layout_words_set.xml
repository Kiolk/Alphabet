<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_constraintDimensionRatio="H, 1:1"
    android:background="@color/general_dark_gray">

    <ImageView
        android:id="@+id/iv_topic_picture"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="H, 2:1"
        tools:src="@drawable/peacock"
        android:scaleType="center"/>

    <TextView
        android:id="@+id/tv_topic_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Жывелы 5/30"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="50dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_topic_picture"/>


    <ProgressBar
        android:id="@+id/pb_topic_progress"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:progress="30"
        app:layout_constraintTop_toBottomOf="@+id/tv_topic_title"
        style="?android:attr/progressBarStyleHorizontal"/>

</android.support.constraint.ConstraintLayout>