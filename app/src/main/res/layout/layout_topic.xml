<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/cv_topic"
    android:stateListAnimator="@animator/button_elevation"
    android:background="@color/general_gray_small"
    app:elevation="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.kiolk.alphabet.presentation.views.GameIndicator
            android:id="@+id/gi_topic_item"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="H, 1:1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/iv_topic_blur_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/gi_topic_item"
            app:layout_constraintLeft_toLeftOf="@+id/gi_topic_item"
            app:layout_constraintRight_toRightOf="@+id/gi_topic_item"
            app:layout_constraintTop_toTopOf="@+id/gi_topic_item"
            tools:ignore="ContentDescription"
            tools:visibility="visible" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>