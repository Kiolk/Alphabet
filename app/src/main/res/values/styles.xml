<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppTheme.DialogButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textColor">@color/general_blue</item>
        <item name="android:textSize">@dimen/dialog_button_text</item>
    </style>

    <style name="AppTheme.MenuButton">
        <item name="android:gravity">left</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/bg_menu_button</item>
    </style>
</resources>
