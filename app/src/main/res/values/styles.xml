<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.SplashTheme">
        <item name="android:windowBackground">@drawable/bg_splash</item>
        <item name="android:statusBarColor">@color/general_white</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="AppTheme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="AppTheme.DialogButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textColor">@color/general_blue</item>
        <item name="android:textSize">@dimen/dialog_button_text</item>
    </style>

    <style name="AppTheme.MenuButton">
        <item name="android:gravity">left</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/bg_menu_button</item>
    </style>

    <style name="AppTheme.EndGameButton">
        <item name="android:textColor">@color/general_blue</item>
        <item name="android:textSize">@dimen/text_size_end_game_button</item>
        <item name="android:padding">@dimen/padding_end_gamer_button</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
    </style>

    <style name="AppTheme.HelpButton">
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="AppTheme.HelpButtonLayout">
        <item name="android:background">@drawable/bg_big_round_white</item>
        <item name="android:elevation">3dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:stateListAnimator">@animator/button_elevation</item>
    </style>

    <style name="AppTheme.AboutSmallTitle">
        <item name="android:fontFamily">@font/product_sans_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginTop">31dp</item>
        <item name="android:textColor">@color/general_black</item>
    </style>
</resources>
